{% extends 'base.html.twig' %}

{% block title %}Message
{% endblock %}

{% block stylesheets %}
	<style>

		body {
			background-color: #181a19;
		}

		@media screen and(max-width: 480px) {
			.message-container {
				width: 100%;
				padding: 10px;
				font-size: 16px;
			}
		}

		.page-container {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
		}


		.message-container {
			background-color: white;
			border-radius: 10px;
			padding: 20px;
			text-align: center;
			margin: 20px auto;
			width: 400px;
			height: 500px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="page-container">
		<div class="message-container">
			<h1>Message</h1>
			<p>{{ message }}</p>
		</div>
	</div>
{% endblock %}
